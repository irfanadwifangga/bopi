# Backend environment example for BOPI API
# Copy this file to .env and fill in real values for local development

# Server
PORT=2000
NODE_ENV=development

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/bopi

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# JWT
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Cookie settings
# SameSite: 'lax'|'strict'|'none'
COOKIE_SAMESITE=lax
# COOKIE_SECURE: true in production (requires HTTPS), false for local HTTP development
COOKIE_SECURE=false
